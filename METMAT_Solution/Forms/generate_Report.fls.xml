<form id="generate_Report"  menuName="Generate Report"  title='Generate Report'  platforms="ios web" xmlns="http://schemas.mobilengine.com/fls/v2">
	<declarations>
		<let id='user_proj' shape='scalar' value='{loadNewerFromServer:SELECT t.selected_project FROM tester t WHERE t.tester_email = sysp.user}' />
		<let id='currentVersion' shape='scalar' value='{SELECT v.version FROM versions v WHERE v.current = 1 AND v.project = user_proj}' />
	</declarations>  
	<header></header>
	  <textbox id="name" label="Name" >
		<validation>
			<validator cond='{length(name.text) > 0}' message='Give a name'/>
		  </validation>
	  </textbox>

	  <textbox id="to" label="Target email address" >
		<validation>
			<validator cond='{length(name.text) > 0}' message='Give a name'/>
		  </validation>
	  </textbox>
	  
	  <datepicker id="filterdate" label="Date setting in report" dateFormat='(dtf yyyy "-" MM "-" dd)' >
		<validation>
			<validator cond='{filterdate.date is not NULL}' message='Give a date'/>
		  </validation>
		</datepicker>
	  <submitbutton text="Generate test report" id="generateTcReport"/>
	  <submitbutton text="Generate assigned testcase list" id="generateAssignedTcList"/>
</form>