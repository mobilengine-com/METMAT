<form id='testers' menuName='Testers' platforms="web" xmlns="http://schemas.mobilengine.com/fls/v2">
    <declarations>
        <let id='user_proj' shape='scalar' value='{
        loadNewerFromServer:SELECT us.active_project 
        FROM userState us INNER JOIN tester t ON us.tester_name = t.tester_name
        WHERE t.tester_email = sysp.user}'/>

        <let id='stLoggedUserRole' shape='scalar' value='{
        SELECT
            U.role
        FROM
            userRole U
        WHERE
            U.tester_email = sysp.user AND
            U.project = user_proj
        }' />
    </declarations>
    <chapter title='Testers'>
        <table id='tester_table' record='r' recordset='{select t.tester_name, t.tester_email, t.work_type, t.tester_active, t.participation from tester t}'>
            <header>
                <row>
                    <cell>
                        <textview text='Name'/>
                    </cell>
                    <cell>
                        <textview text='Mail'/>
                    </cell>
                    <cell>
                        <textview text='Role'/>
                    </cell>
                    <cell>
                        <textview text='Work type'/>
                    </cell>
                    <cell>
                        <textview text='State'/>
                    </cell>
                    <cell>
                        <textview text='Participation'/>
                    </cell>
                    <cell>
                        <textview text='Day off'/>
                    </cell>
                    <cell>
                        <textview text=''/>
                    </cell>
                </row>
            </header>
            <row>
            <declarations>
                <let id="bDelete" shape="scalar" value="{false}" />
            </declarations>
                <cell>
                    <if cond='{not(r.tester_name = "")}'>
                        <textview text='{r.tester_name}'/>
                    </if>
                    <if cond='{r.tester_name = ""}'>
                        <textbox id='tb_tester_name' text='{r.tester_name}'/>
                    </if>
                </cell>
                <cell>
                    <if cond='{stLoggedUserRole == "Admin"}'>
                        <textbox id='tb_tester_email' text='{r.tester_email}'/>
                    </if>
                    <if cond='{not (stLoggedUserRole == "Admin")}'>
                        <textview text="{r.tester_email}"/>
                    </if>
                </cell>
                <cell>
                    <popup title="Role" openMode="dialog">
                        <backbutton text="X"></backbutton>
                        <table id="role_table" record="tr" recordset='{SELECT ur.role, ur.project, 0 new FROM userRole ur WHERE ur.tester_email = r.tester_email}'>
                            <header>
                                <row>
                                    <cell><textview text="Role"/></cell>
                                    <cell><textview text="Project"/></cell>
                                </row>
                            </header>
                            <row>
                                <cell>
                                    <if cond='{stLoggedUserRole == "Admin"}'>
                                        <dropdown id='drRole' 
                                        keyMap="{v}" 
                                        textMap="{v}"
                                        selectedKey="{tr.role}"
                                        choices='{["Tester", "Admin"]}'>
                                        </dropdown>
                                    </if>
                                    <if cond='{not (stLoggedUserRole == "Admin")}'>
                                        <textview text="{tr.role}"/>
                                    </if>
                                </cell>
                                <cell>
                                    <if cond="{tr.new = 1}">
                                        <dropdown id='newProj' 
                                        keyMap="{project}" 
                                        textMap="{project}"
                                        choices='{SELECT v.project FROM versions v GROUP BY v.project}'>
                                        </dropdown>
                                    </if>
                                    <if cond="{not (tr.new = 1)}">
                                        <textview id="projName" text="{tr.project}"/>
                                    </if>
                                </cell>
                            </row>
                        </table>
                        <hbox>
                            <if cond='{stLoggedUserRole == "Admin"}'>
                                <addbutton records='{SELECT "Tester" role, "" project, 1 new}' table='role_table' text='Add new project role'></addbutton>
                                <submitbutton closeForm="{false}" id="btnSaveRoles" text="Save" ></submitbutton>
                            </if>
                        </hbox>
                        
                    </popup>

                </cell>
                <cell>
                    <if cond='{stLoggedUserRole == "Admin"}'>
                        <dropdown id='drWork' 
                        keyMap="{v}" 
                        textMap="{v}"
                        selectedKey="{r.work_type}"
                        choices='{["Test writing", "Testing", "Spectator"]}'>
                        </dropdown>
                    </if>
                    <if cond='{not (stLoggedUserRole == "Admin")}'>
                        <textview text="{r.work_type}"/>
                    </if>
                </cell>
                <cell>
                    <if cond='{stLoggedUserRole == "Admin"}'>
                        <dropdown id='drActive' 
                        keyMap="{v}" 
                        textMap="{v}"
                        selectedKey="{r.tester_active}"
                        choices='{["Active", "Inactive"]}'>
                        </dropdown>
                    </if>
                    <if cond='{not (stLoggedUserRole == "Admin")}'>
                        <textview text="{r.work_type}"/>
                    </if>
                </cell>
                <cell>
                    <if cond='{stLoggedUserRole == "Admin"}'>
                        <numberbox id="part" float="true" number="{tofloat(r.participation)}" />
                    </if>
                    <if cond='{not (stLoggedUserRole == "Admin")}'>
                        <textview text="{toString(r.participation)}"/>
                    </if>
                </cell>
                <cell>
                    <if cond='{stLoggedUserRole == "Admin"}'>
                        <if cond="{bDelete}">
                            <actionbutton text="Undo">
                                <set value="{false}" target="bDelete" />
                            </actionbutton>
                        </if>
                        <if cond="{not bDelete}">
                            <actionbutton text="Delete">
                                <set value="{true}" target="bDelete" />
                            </actionbutton>
                        </if>
                    </if>
                </cell>
            </row>
        </table>
        <if cond='{stLoggedUserRole == "Admin"}'>
            <addbutton records='{select "" tester_name, "" tester_email, "Testing" work_type, "Inactive" tester_active, 1 participation}' table='tester_table' text='Add tester'></addbutton>
        </if>
    </chapter>
</form>